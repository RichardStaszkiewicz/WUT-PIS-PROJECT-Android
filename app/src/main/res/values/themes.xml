<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Theme.Android" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/purple_500</item>
		<item name="colorPrimaryVariant">@color/purple_700</item>
		<item name="colorOnPrimary">@color/white</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/teal_200</item>
		<item name="colorSecondaryVariant">@color/teal_700</item>
		<item name="colorOnSecondary">@color/black</item>
		<!-- Status bar color. -->
		<item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
		<!-- Customize your theme here. -->
	</style>

	<style name="Theme.Android.button" parent="Theme.Android">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:minHeight">@dimen/button_min_height</item>
		<item name="android:layout_margin">@dimen/button_margin_horizontal</item>
		<item name="android:paddingHorizontal" tools:targetApi="o">@dimen/button_padding_horizontal</item>
		<item name="android:background">@drawable/button_background_ripple</item>
		<item name="android:elevation">@dimen/button_elevation</item>
	</style>
</resources>
